{
    "type": "object",
    "properties": {
        "activate_account_timeout": { "type": "integer", "default": 30 },
        "app_logo": { "type": "string" },
        "email_from": { "type": "string" },
        "ticket": {
            "type": "object",
            "properties": {
                "max_response_to_ticket_timeout": { "type": "integer" },
                "max_attachment_size": {
                    "type": "integer",
                    "maximum": 5120,
                    "description": "size in KB"
                },
                "attachment_types_allowed": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "default": [],
                    "uniqueItems": true
                },
                "notification" : {
                    "type": "object",
                    "properties" : {
                        "channel": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "minItems": 1,
                            "default": ["mail", "database"],
                            "uniqueItems": true
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}
